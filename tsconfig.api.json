{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "tsBuildInfoFile": null,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": [
    "src/api/**/*",
    "src/cli/**/*",
    "scripts/schema.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/lib",
    "src/*.tsx",
    "src/*.ts"
  ]
}
